{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out/test",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.test.ts", "src/**/*.ts", "l10n/**/*.json"],
  "exclude": ["node_modules"]
}
