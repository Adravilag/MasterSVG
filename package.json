{
  "name": "bezier-icons",
  "displayName": "Bezier Icons",
  "description": "Manage, preview, and transform SVG icons in your workspace. Convert SVGs to Icon components instantly.",
  "version": "0.1.0",
  "publisher": "adravilag",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "Snippets"
  ],
  "keywords": [
    "icons",
    "svg",
    "bezier-icons",
    "iconify",
    "components"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:astro"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "submenus": [
      {
        "id": "bezierIcons.svgMenu",
        "label": "Bezier Icons"
      }
    ],
    "languages": [
      {
        "id": "bezierignore",
        "aliases": [
          "Bezier Ignore"
        ],
        "filenames": [
          ".bezierignore"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bezierignore",
        "scopeName": "source.bezierignore",
        "path": "./syntaxes/bezierignore.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "iconManager.openPanel",
        "title": "Bezier: Open Panel",
        "icon": "$(symbol-color)"
      },
      {
        "command": "iconManager.openWelcome",
        "title": "Bezier: Setup / Welcome",
        "icon": "$(home)"
      },
      {
        "command": "iconManager.scanWorkspace",
        "title": "Bezier: Scan Workspace SVGs"
      },
      {
        "command": "iconManager.scanUsages",
        "title": "Bezier: Scan Icon Usages",
        "icon": "$(references)"
      },
      {
        "command": "iconManager.transformSvgToIcon",
        "title": "Bezier: Transform SVG to Icon Component"
      },
      {
        "command": "iconManager.optimizeSvg",
        "title": "Bezier: Optimize SVG (SVGO)",
        "icon": "$(rocket)"
      },
      {
        "command": "iconManager.insertIcon",
        "title": "Bezier: Insert Icon"
      },
      {
        "command": "iconManager.previewIcon",
        "title": "Bezier: Preview Icon at Cursor"
      },
      {
        "command": "iconManager.goToInlineSvg",
        "title": "Go to SVG",
        "icon": "$(go-to-file)"
      },
      {
        "command": "iconManager.goToUsage",
        "title": "Go to Usage",
        "icon": "$(go-to-file)"
      },
      {
        "command": "iconManager.transformInlineSvg",
        "title": "Transform SVG to Icon Component",
        "icon": "$(replace)"
      },
      {
        "command": "iconManager.configureProject",
        "title": "Bezier: Configure Project",
        "icon": "$(gear)"
      },
      {
        "command": "iconManager.editIgnoreFile",
        "title": "Bezier: Edit Ignore File (.bezierignore)",
        "icon": "$(list-filter)"
      },
      {
        "command": "iconManager.refreshIcons",
        "title": "Bezier: Refresh All Views",
        "icon": "$(refresh)"
      },
      {
        "command": "iconManager.refreshFiles",
        "title": "Bezier: Refresh Files",
        "icon": "$(refresh)"
      },
      {
        "command": "iconManager.refreshCode",
        "title": "Bezier: Refresh Code",
        "icon": "$(refresh)"
      },
      {
        "command": "iconManager.refreshBuilt",
        "title": "Bezier: Refresh Built Icons",
        "icon": "$(refresh)"
      },
      {
        "command": "iconManager.buildIcons",
        "title": "Bezier: Build Icons",
        "icon": "$(package)"
      },
      {
        "command": "iconManager.searchIcons",
        "title": "Bezier: Search Icons (Iconify)",
        "icon": "$(search)"
      },
      {
        "command": "iconManager.deleteIcons",
        "title": "Delete Icon(s)",
        "icon": "$(trash)"
      },
      {
        "command": "iconManager.removeFromBuilt",
        "title": "Remove from Built",
        "icon": "$(remove)"
      },
      {
        "command": "iconManager.showDetails",
        "title": "Show Details",
        "icon": "$(info)"
      },
      {
        "command": "iconManager.goToCode",
        "title": "Go to Code",
        "icon": "$(go-to-file)"
      },
      {
        "command": "iconManager.copyIconName",
        "title": "Copy Icon Name",
        "icon": "$(copy)"
      },
      {
        "command": "iconManager.colorEditor",
        "title": "Open in Editor",
        "icon": "$(edit)"
      },
      {
        "command": "iconManager.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "iconManager.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "iconManager.expandBuiltIcons",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "iconManager.collapseBuiltIcons",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "iconManager.expandSvgFiles",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "iconManager.collapseSvgFiles",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "iconManager.exportComponent",
        "title": "Export as Component",
        "icon": "$(file-code)"
      },
      {
        "command": "iconManager.generateSprite",
        "title": "Bezier: Generate SVG Sprite",
        "icon": "$(layers)"
      },
      {
        "command": "iconManager.addSvgToCollection",
        "title": "Add to Icon Collection",
        "icon": "$(add)"
      },
      {
        "command": "iconManager.removeReference",
        "title": "Remove Reference",
        "icon": "$(trash)"
      },
      {
        "command": "iconManager.findAndReplace",
        "title": "Find & Replace Path",
        "icon": "$(search-replace)"
      },
      {
        "command": "iconManager.renameIcon",
        "title": "Rename Icon",
        "icon": "$(edit)"
      },
      {
        "command": "iconManager.viewSprite",
        "title": "View SVG Sprite",
        "icon": "$(eye)"
      },
      {
        "command": "iconManager.viewIconsFile",
        "title": "View Icons File",
        "icon": "$(eye)"
      },
      {
        "command": "iconManager.deleteBuiltFile",
        "title": "Delete File",
        "icon": "$(trash)"
      },
      {
        "command": "iconManager.buildAllReferences",
        "title": "Build All References",
        "icon": "$(package)"
      },
      {
        "command": "iconManager.buildAllFiles",
        "title": "Build All SVG Files",
        "icon": "$(package)"
      },
      {
        "command": "iconManager.cleanSprite",
        "title": "Bezier: Clean Sprite (Remove Invalid Entries)",
        "icon": "$(trash)"
      }
    ],
    "configuration": {
      "title": "Bezier",
      "properties": {
        "iconManager.componentName": {
          "type": "string",
          "default": "bz-icon",
          "description": "Name of the Icon component to use in transformations"
        },
        "iconManager.componentImport": {
          "type": "string",
          "default": "@/components/ui/Icon",
          "description": "Import path for the Icon component"
        },
        "iconManager.svgFolders": {
          "type": "array",
          "default": [
            "src/assets/icons",
            "src/icons",
            "public/icons",
            "assets/icons",
            "icons",
            "svg",
            "assets/svg"
          ],
          "description": "Folders to scan for SVG files"
        },
        "iconManager.outputFormat": {
          "type": "string",
          "enum": [
            "jsx",
            "vue",
            "svelte",
            "astro",
            "html"
          ],
          "default": "jsx",
          "description": "Default output format for icon components"
        },
        "iconManager.iconNameAttribute": {
          "type": "string",
          "default": "name",
          "description": "Attribute name for the icon identifier (name, icon, src, etc.)"
        },
        "iconManager.autoImport": {
          "type": "boolean",
          "default": true,
          "description": "Automatically add import statement when inserting icons"
        },
        "iconManager.libraryPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Bezier library (icons.json)"
        },
        "iconManager.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "Directory where icons.ts or sprite.svg will be generated (relative to workspace root)"
        },
        "iconManager.buildFormat": {
          "type": "string",
          "enum": [
            "icons.ts",
            "sprite.svg"
          ],
          "default": "icons.ts",
          "description": "Output format for built icons"
        },
        "iconManager.webComponentName": {
          "type": "string",
          "default": "bz-icon",
          "description": "Name of the Web Component for icons (e.g. bz-icon)"
        },
        "iconManager.deleteAfterBuild": {
          "type": "boolean",
          "default": false,
          "description": "Delete original SVG file after building to sprite/component"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iconManager",
          "title": "Bezier Icons",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "iconManager": [
        {
          "id": "iconManager.svgFiles",
          "name": "Files"
        },
        {
          "id": "iconManager.workspaceIcons",
          "name": "Code"
        },
        {
          "id": "iconManager.builtIcons",
          "name": "Built"
        },
        {
          "id": "iconManager.preview",
          "name": "Preview",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "iconManager.expandSvgFiles",
          "when": "view == iconManager.svgFiles && !iconManager.svgFilesExpanded",
          "group": "navigation@0"
        },
        {
          "command": "iconManager.collapseSvgFiles",
          "when": "view == iconManager.svgFiles && iconManager.svgFilesExpanded",
          "group": "navigation@0"
        },
        {
          "command": "iconManager.editIgnoreFile",
          "when": "view == iconManager.svgFiles",
          "group": "navigation@1"
        },
        {
          "command": "iconManager.buildAllFiles",
          "when": "view == iconManager.svgFiles",
          "group": "navigation@2"
        },
        {
          "command": "iconManager.refreshIcons",
          "when": "view == iconManager.svgFiles",
          "group": "navigation@2"
        },
        {
          "command": "iconManager.expandAll",
          "when": "view == iconManager.workspaceIcons && !iconManager.workspaceExpanded",
          "group": "navigation@0"
        },
        {
          "command": "iconManager.collapseAll",
          "when": "view == iconManager.workspaceIcons && iconManager.workspaceExpanded",
          "group": "navigation@0"
        },
        {
          "command": "iconManager.refreshIcons",
          "when": "view == iconManager.workspaceIcons",
          "group": "navigation@1"
        },
        {
          "command": "iconManager.buildAllReferences",
          "when": "view == iconManager.workspaceIcons",
          "group": "navigation@2"
        },
        {
          "command": "iconManager.expandBuiltIcons",
          "when": "view == iconManager.builtIcons && !iconManager.builtExpanded",
          "group": "navigation@0"
        },
        {
          "command": "iconManager.collapseBuiltIcons",
          "when": "view == iconManager.builtIcons && iconManager.builtExpanded",
          "group": "navigation@0"
        },
        {
          "command": "iconManager.refreshBuilt",
          "when": "view == iconManager.builtIcons",
          "group": "navigation@1"
        },
        {
          "command": "iconManager.searchIcons",
          "when": "view == iconManager.builtIcons",
          "group": "navigation@2"
        },
        {
          "command": "iconManager.configureProject",
          "when": "view == iconManager.builtIcons",
          "group": "navigation@3"
        }
      ],
      "editor/context": [
        {
          "command": "iconManager.transformSvgToIcon",
          "when": "editorHasSelection",
          "group": "iconManager"
        },
        {
          "command": "iconManager.optimizeSvg",
          "when": "editorHasSelection",
          "group": "iconManager"
        },
        {
          "command": "iconManager.previewIcon",
          "when": "editorTextFocus",
          "group": "iconManager"
        }
      ],
      "explorer/context": [
        {
          "command": "iconManager.scanWorkspace",
          "when": "explorerResourceIsFolder",
          "group": "iconManager"
        },
        {
          "submenu": "bezierIcons.svgMenu",
          "when": "resourceExtname == .svg",
          "group": "iconManager"
        }
      ],
      "bezierIcons.svgMenu": [
        {
          "command": "iconManager.colorEditor",
          "group": "1_edit@1"
        },
        {
          "command": "iconManager.showDetails",
          "group": "1_edit@2"
        },
        {
          "command": "iconManager.optimizeSvg",
          "group": "2_optimize@1"
        },
        {
          "command": "iconManager.viewSprite",
          "when": "resourceFilename == sprite.svg",
          "group": "3_view@1"
        }
      ],
      "view/item/context": [
        {
          "command": "iconManager.addSvgToCollection",
          "when": "view == iconManager.svgFiles && viewItem == svgIcon",
          "group": "inline"
        },
        {
          "command": "iconManager.removeFromBuilt",
          "when": "view == iconManager.svgFiles && viewItem =~ /svgIconBuilt|svgIconRasterizedBuilt/",
          "group": "inline"
        },
        {
          "command": "iconManager.showDetails",
          "when": "view == iconManager.svgFiles && viewItem =~ /svgIcon|svgIconBuilt|svgIconRasterized|svgIconRasterizedBuilt/",
          "group": "navigation"
        },
        {
          "command": "iconManager.copyIconName",
          "when": "view == iconManager.svgFiles && viewItem =~ /svgIcon|svgIconBuilt|svgIconRasterized|svgIconRasterizedBuilt/",
          "group": "navigation"
        },
        {
          "command": "iconManager.colorEditor",
          "when": "view == iconManager.svgFiles && viewItem =~ /svgIcon|svgIconBuilt/",
          "group": "navigation"
        },
        {
          "command": "iconManager.exportComponent",
          "when": "view == iconManager.svgFiles && viewItem =~ /svgIcon|svgIconBuilt/",
          "group": "1_export"
        },
        {
          "command": "iconManager.renameIcon",
          "when": "view == iconManager.svgFiles && viewItem =~ /svgIcon|svgIconBuilt|svgIconRasterized|svgIconRasterizedBuilt/",
          "group": "7_modification"
        },
        {
          "command": "iconManager.deleteIcons",
          "when": "view == iconManager.svgFiles && viewItem =~ /svgIcon|svgIconBuilt|svgIconRasterized|svgIconRasterizedBuilt/",
          "group": "9_cutcopypaste"
        },
        {
          "command": "iconManager.removeFromBuilt",
          "when": "view == iconManager.svgFiles && viewItem =~ /svgIconBuilt|svgIconRasterizedBuilt/",
          "group": "9_cutcopypaste"
        },
        {
          "command": "iconManager.transformInlineSvg",
          "when": "view == iconManager.workspaceIcons && viewItem == inlineSvg",
          "group": "inline"
        },
        {
          "command": "iconManager.goToInlineSvg",
          "when": "view == iconManager.workspaceIcons && viewItem =~ /inlineSvg|inlineSvgRasterized|inlineSvgRasterizedBuilt|inlineSvgBuilt/",
          "group": "navigation"
        },
        {
          "command": "iconManager.showDetails",
          "when": "view == iconManager.workspaceIcons && viewItem =~ /inlineSvg|imgRef|inlineSvgRasterized|imgRefRasterized|inlineSvgBuilt|inlineSvgRasterizedBuilt/",
          "group": "navigation"
        },
        {
          "command": "iconManager.goToCode",
          "when": "view == iconManager.workspaceIcons && viewItem =~ /inlineSvg|imgRef|builtIcon|inlineSvgRasterized|imgRefRasterized|inlineSvgBuilt|inlineSvgRasterizedBuilt/",
          "group": "navigation"
        },
        {
          "command": "iconManager.copyIconName",
          "when": "view == iconManager.workspaceIcons && viewItem =~ /inlineSvg|imgRef|builtIcon|inlineSvgRasterized|imgRefRasterized|inlineSvgBuilt|inlineSvgRasterizedBuilt/",
          "group": "navigation"
        },
        {
          "command": "iconManager.colorEditor",
          "when": "view == iconManager.workspaceIcons && viewItem =~ /inlineSvg|imgRef|inlineSvgBuilt/",
          "group": "navigation"
        },
        {
          "command": "iconManager.exportComponent",
          "when": "view == iconManager.workspaceIcons && viewItem =~ /inlineSvg|imgRef|inlineSvgBuilt/",
          "group": "1_export"
        },
        {
          "command": "iconManager.deleteIcons",
          "when": "view == iconManager.workspaceIcons && viewItem =~ /inlineSvg|imgRef|inlineSvgRasterized|imgRefRasterized|inlineSvgBuilt|inlineSvgRasterizedBuilt/",
          "group": "9_cutcopypaste"
        },
        {
          "command": "iconManager.removeFromBuilt",
          "when": "view == iconManager.workspaceIcons && viewItem =~ /inlineSvgBuilt|inlineSvgRasterizedBuilt/",
          "group": "9_cutcopypaste"
        },
        {
          "command": "iconManager.goToInlineSvg",
          "when": "view == iconManager.workspaceIcons && viewItem == missingRef",
          "group": "navigation"
        },
        {
          "command": "iconManager.removeReference",
          "when": "view == iconManager.workspaceIcons && viewItem == missingRef",
          "group": "1_fix"
        },
        {
          "command": "iconManager.findAndReplace",
          "when": "view == iconManager.workspaceIcons && viewItem == missingRef",
          "group": "1_fix"
        },
        {
          "command": "iconManager.showDetails",
          "when": "view == iconManager.builtIcons && viewItem =~ /builtIcon|builtIconRasterized/",
          "group": "navigation"
        },
        {
          "command": "iconManager.copyIconName",
          "when": "view == iconManager.builtIcons && viewItem =~ /builtIcon|builtIconRasterized/",
          "group": "navigation"
        },
        {
          "command": "iconManager.colorEditor",
          "when": "view == iconManager.builtIcons && viewItem == builtIcon",
          "group": "navigation"
        },
        {
          "command": "iconManager.exportComponent",
          "when": "view == iconManager.builtIcons && viewItem == builtIcon",
          "group": "1_export"
        },
        {
          "command": "iconManager.renameIcon",
          "when": "view == iconManager.builtIcons && viewItem =~ /builtIcon|builtIconRasterized/",
          "group": "7_modification"
        },
        {
          "command": "iconManager.removeFromBuilt",
          "when": "view == iconManager.builtIcons && viewItem =~ /builtIcon|builtIconRasterized/",
          "group": "9_cutcopypaste"
        },
        {
          "command": "iconManager.viewSprite",
          "when": "view == iconManager.builtIcons && viewItem == builtSpriteFile",
          "group": "navigation"
        },
        {
          "command": "iconManager.deleteBuiltFile",
          "when": "view == iconManager.builtIcons && viewItem == builtSpriteFile",
          "group": "9_cutcopypaste"
        },
        {
          "command": "iconManager.viewIconsFile",
          "when": "view == iconManager.builtIcons && viewItem == builtIconsFile",
          "group": "navigation"
        },
        {
          "command": "iconManager.deleteBuiltFile",
          "when": "view == iconManager.builtIcons && viewItem == builtIconsFile",
          "group": "9_cutcopypaste"
        }
      ]
    },
    "keybindings": [
      {
        "command": "iconManager.openPanel",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      },
      {
        "command": "iconManager.insertIcon",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "svgo": "^3.2.0"
  }
}
