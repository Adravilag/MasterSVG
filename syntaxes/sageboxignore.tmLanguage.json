{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SageBox Ignore",
  "scopeName": "source.sageboxignore",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#negation"
    },
    {
      "include": "#directory"
    },
    {
      "include": "#wildcard"
    },
    {
      "include": "#pattern"
    }
  ],
  "repository": {
    "comment": {
      "match": "^\\s*#.*$",
      "name": "comment.line.number-sign.sageboxignore"
    },
    "negation": {
      "match": "^!",
      "name": "keyword.operator.negation.sageboxignore"
    },
    "directory": {
      "match": "/$",
      "name": "punctuation.definition.directory.sageboxignore"
    },
    "wildcard": {
      "patterns": [
        {
          "match": "\\*\\*",
          "name": "constant.other.wildcard.asterisk.double.sageboxignore"
        },
        {
          "match": "\\*",
          "name": "constant.other.wildcard.asterisk.sageboxignore"
        },
        {
          "match": "\\?",
          "name": "constant.other.wildcard.questionmark.sageboxignore"
        }
      ]
    },
    "pattern": {
      "match": "[^#\\s*?/]+",
      "name": "string.unquoted.path.sageboxignore"
    }
  }
}
